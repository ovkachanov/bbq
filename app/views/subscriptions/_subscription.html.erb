<span class="subscription">
  <% if subscription.user.present? %>
    <%= render partial: 'users/user', object: subscription.user %>
  <% else %>
    <em><%= subscription.user_name %></em>
  <% end %>
  <% if current_user_has_the_right?(subscription) %>
    <%= link_to(fa_icon('times'), event_subscription_path(subscription.event, subscription), method: :delete, data: {confirm: t('.destroy_confirm')}) %>
  <% end %>
</span>